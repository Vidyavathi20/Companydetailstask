@model IEnumerable<Loadproject.Models.Designation>
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header" style="margin-top: -9px;margin-left: -11px;">
    <h2> Designation Settings </h2>
    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="@Url.Action("Dashboard","Login")">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span> Designation Details</span></li>
        </ol>
        <a class="sidebar-right-toggle"></a>
    </div>
</header>

<div class="row" id="divnew" style="display:none">
    <div class="col-md-12">
        <form id="form" action="@Url.Action("Insert_designation","Settings")" method="post">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                    </div>
                    <h2 class="panel-title"> New Designation</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <input type="hidden" name="QueryType" value="Insert" />
                        <label class="col-sm-2"> Designation <span class="required">*</span></label>
                        <div class="col-sm-3">
                            <input type="text" name="Designation_name" class="form-control" />
                        </div>
                        <div class="col-sm-7">
                            <div class="col-sm-12 col-sm-offset-3" style="text-align:center;">
                                <button type="submit" class="btn btn-primary" id="btn_submit">Submit</button>
                                <button type="reset" id="cancel1" class="btn btn-danger cancel">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                @*<footer class="panel-footer">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3" style="text-align:center;">
                                <button type="submit" class="btn btn-primary" id="btn_submit">Submit</button>
                                <button type="reset" id="cancel1" class="btn btn-danger cancel">Cancel</button>
                            </div>
                        </div>
                    </footer>*@
            </section>
        </form>
    </div>
</div>

<div class="row" id="divdetails">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-actions">
                    <button class="btn btn-primary" id="add"><i class="fa fa-plus" aria-hidden="true"> Add New</i></button>
                </div>
                <h2 class="panel-title">List of Designations</h2>
            </header>

            <div class="panel-body">
                <div class="form-group">
                    <div class="panel-body">
                        <table class="table table-bordered table-striped mb-none" id="datatable-default" data-swf-path="assets/vendor/jquery-datatables/extras/TableTools/swf/copy_csv_xls_pdf.swf">
                            <thead>
                                <tr>
                                    <th class="centercls"> S.No </th>
                                    <th style="display:none;"></th>
                                    <th class="centercls">Designation Name</th>
                                    <th class="centercls">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int RowNo = 0;}
                                @foreach (var item in Model)
                                {

                                    <tr class="gradeX">
                                        <td class="centercls">
                                            @{RowNo++;}@RowNo
                                        </td>
                                        <td class="ID" style="display:none;">
                                            <span>@Html.Encode(item.Id)</span>
                                        </td>
                                        <td>
                                            <span>@Html.Encode(item.Designation_name)</span>
                                        </td>
                                        <td class="centercls">
                                            <button class="btn btn-primary" onclick="edit_desg(@Html.Encode(item.Id))" id="edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                            <button class="btn btn-danger" id="delete"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        }
    </div>
</div>

<div class="row" id="divedit" style="display:none;">
    <div class="col-md-12">
        <form id="form" action="@Url.Action("Insert_designation","Settings")" method="post">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                    </div>
                    <h2 class="panel-title">Edit Designation</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <input type="hidden" name="Id" id="eID" />
                        <input type="hidden" name="QueryType" value="Update" />
                        <label class="col-sm-2 control-label"> Designation Name </label>
                        <div class="col-sm-3">
                            <input id="edesg" name="Designation_name" class="form-control" />
                        </div>
                        <div class="col-sm-7">
                            <div class="col-sm-12 col-sm-offset-3" style="text-align:center;">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <button type="reset" id="cancel" class="btn btn-danger cancel">Cancel</button>
                            </div>
                        </div>
                    </div>

                </div>
                @*<footer class="panel-footer">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3" style="text-align:center;">
                                <button type="submit" class="btn btn-primary">Update</button>
                                <button type="reset" id="cancel" class="btn btn-danger cancel">Cancel</button>
                            </div>
                        </div>
                    </footer>*@
            </section>
        </form>
    </div>
</div>

